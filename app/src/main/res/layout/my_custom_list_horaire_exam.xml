<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="3dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtNomCoursExamInteroStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mm"
            android:text="Cours :"
            android:textColor="#000000"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txtCoursName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginLeft="17dp"
            android:layout_toEndOf="@+id/txtNomCoursExamInteroStudent"
            android:layout_toRightOf="@+id/txtNomCoursExamInteroStudent"
            android:fontFamily="@font/mm"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtLieuCoursExamInteroStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtNomCoursExamInteroStudent"
            android:fontFamily="@font/mm"
            android:text="Lieu :"
            android:textColor="#000000"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txtlieuCourHoraireExam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtCoursName"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_toEndOf="@+id/txtLieuCoursExamInteroStudent"
            android:layout_toRightOf="@+id/txtLieuCoursExamInteroStudent"
            android:fontFamily="@font/mm"
            android:text="TextView"
            android:textColor="#3A3A3A"
            android:textSize="13sp"
            android:textStyle="normal"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtDateCoursExamInteroStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mm"
            android:text="Date :"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txtDateHoraireExam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/mm"
            android:paddingLeft="10dp"
            android:text="TextView"
            android:textColor="#4D4D4D"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTitulaireCoursExamInteroStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mm"
            android:text="Titulaire :"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txtTitulaireCours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/mm"
            android:text="TextView"
            android:textColor="#4B4B4B"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtDetailsCoursExamInteroStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mm"
            android:text="DÃ©tails :"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/edittxtAutreRaison"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/mm"
            android:paddingLeft="8dp"
            android:singleLine="false"
            android:text="TextView"
            android:textColor="#5C5C5C"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>
