<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HoraireActivity">
    <TextView
        android:id="@+id/txthoraireTitre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/horaire" />

    <View
        android:id="@+id/hr1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txthoraireTitre"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#4acbfa" />

    <TextView
        android:id="@+id/txtHorairePromo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hr1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:gravity="right"
        android:text="TextView"
        android:textColor="#000000" />

    <ListView
        android:id="@+id/listViewHoraireEtudiant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtHorairePromo"
        android:paddingTop="3dp" />

</RelativeLayout>