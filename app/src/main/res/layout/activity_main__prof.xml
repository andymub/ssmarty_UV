<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity_Prof">


    <RelativeLayout
        android:id="@+id/layout_student_act"
        android:layout_width="match_parent"
        android:layout_height="334dp"
        android:layout_below="@+id/prof_txtNom_univ"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="6dp"
        android:paddingTop="6dp"
        android:paddingRight="6dp">

        <ImageButton
            android:id="@+id/imgbtn_liste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="21dp"
            android:layout_marginLeft="10dp"
            android:background="#00FFFFFF"
            android:contentDescription="TODO"
            android:src="@drawable/prof_liste1" />

        <ImageButton
            android:id="@+id/imgbtn_communi_prof"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="10dp"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/communique" />

        <ImageButton
            android:id="@+id/imgbtn_my_listes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView5"
            android:layout_below="@id/imgbtn_liste"
            android:layout_alignLeft="@id/imgbtn_liste"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="5dp"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/mes_listes_prof" />

        <ImageButton
            android:id="@+id/imgbtn_contact_univ"
            android:layout_width="wrap_content"
            android:layout_height="138dp"
            android:layout_below="@id/imgbtn_communi_prof"
            android:layout_alignBaseline="@id/imgbtn_communi_prof"
            android:layout_alignStart="@+id/imgbtn_communi_prof"
            android:layout_alignLeft="@+id/imgbtn_communi_prof"
            android:layout_marginStart="2dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="-4dp"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/ecrire" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgbtn_liste"
            android:layout_alignStart="@+id/textView5"
            android:layout_alignLeft="@+id/textView5"
            android:text="@string/lancer_une_liste_pr_sence"
            android:textSize="8sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="65dp"
            android:layout_marginRight="65dp"
            android:text="@string/contacter_l_universit"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="45dp"
            android:text="@string/v_rifier_mes_listes_de_pr_sence"
            android:textSize="8sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgbtn_liste"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="51dp"
            android:layout_marginRight="51dp"
            android:text="@string/r_diger_une_communication"
            android:textSize="8sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/nom_Prof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:gravity="right"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:text="Nom univ"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/prof_txtNom_univ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:gravity="right"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:text="Nom univ"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_student_act"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Nouvelles récentes de l'université"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/layout_student_act"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:background="#4acbfa" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:background="#4acbfa"
        tools:ignore="UnknownId" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeToRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView_3"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/layout_background"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="3dp"
            android:paddingLeft="3dp">

            <include
                layout="@layout/content_activity_main_prof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</RelativeLayout>