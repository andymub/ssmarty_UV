<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relaLayout_presence"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgapps"
    tools:context=".Activity_liste_presence">

    <TextView
        android:id="@+id/txtListpresTitre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Ajout Horaire" />

    <View
        android:id="@+id/hr1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtListpresTitre"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#4acbfa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtListpresTitre"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="2dp"
            android:background="#0F1E24"
            tools:ignore="UnknownId" />

        <Spinner
            android:id="@+id/spinnerTypeAjoutCours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:entries="@array/typeListePresence"
            android:prompt="@string/country_prompt" />

        <Spinner
            android:id="@+id/spinnerfaDepAjoutCours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:entries="@array/Fac"
            android:prompt="@string/country_prompt" />

        <Spinner
            android:id="@+id/spinnerPromoAjoutCours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:entries="@array/typeListepromo" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="2dp"
            android:background="#0F1E24"
            tools:ignore="UnknownId" />

        <EditText
            android:id="@+id/editxtNomDuCoursAjoutCours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="Nom du cours"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editxtLieuCoursAjoutCours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Lieu"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editxtDateCoursAjoutCours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Date"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edittxtTitulaireAjoutCours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Titulaire"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/detailAjoutCours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Details"
            android:inputType="textMultiLine" />

        <ImageButton
            android:id="@+id/imgbtnAjoutCours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/imgbtnbckgrn"
            app:srcCompat="@drawable/ic_done_one_24dp"
            tools:ignore="VectorDrawableCompat" />
    </LinearLayout>
</RelativeLayout>
