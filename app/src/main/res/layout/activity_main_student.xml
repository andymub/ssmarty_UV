<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_student"
    >



    <View
        android:id="@+id/hr1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="#4acbfa"
        tools:ignore="UnknownId"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/studen_txtNom_univ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hr1"
        android:layout_alignEnd="@+id/hr2"
        android:layout_alignRight="@+id/hr2"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:foregroundGravity="left"
        android:gravity="left"
        android:paddingRight="5dp"
        android:text="Nom univ"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/nom_etudiant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hr1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="5dp"
        android:foregroundGravity="left"
        android:gravity="left"
        android:paddingRight="5dp"
        android:text="Nom univ"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <View
        android:id="@+id/hr2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="29dp"
        android:background="@android:color/background_light"
        android:layout_alignParentLeft="true" />


    <RelativeLayout
        android:id="@+id/layout_student_act"
        android:layout_width="match_parent"
        android:layout_height="334dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/hr2"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:layout_alignParentLeft="true">

        <ImageButton
            android:id="@+id/imgbtn_liste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="21dp"
            android:background="@drawable/rounded_corners_imagebutton"
            android:contentDescription="TODO"
            android:src="@drawable/horaire_"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="21dp" />

        <ImageButton
            android:id="@+id/imgbtn_communi_prof"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="21dp"
            android:background="@drawable/rounded_corners_imagebutton"
            app:srcCompat="@drawable/exam" />

        <ImageButton
            android:id="@+id/imgbtn_my_listes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imgbtn_liste"
            android:layout_marginBottom="13dp"
            android:background="@drawable/rounded_corners_imagebutton"
            app:srcCompat="@drawable/comm_priv" />

        <ImageButton
            android:id="@+id/imgbtn_com_univ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imgbtn_communi_prof"
            android:layout_alignTop="@+id/imgbtn_my_listes"
            android:background="@drawable/rounded_corners_imagebutton"
            app:srcCompat="@drawable/comm_priv_" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imgbtn_liste"
            android:layout_marginStart="84dp"
            android:text="Horaire"
            android:textSize="8sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="84dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:text="Communication Université"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="55dp"
            android:text="Communication Faculté"
            android:textSize="8sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/imgbtn_liste"
            android:layout_marginEnd="84dp"
            android:text="Examen"
            android:textSize="8sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:background="#4acbfa"
        android:layout_below="@+id/layout_student_act"/>

    <TextView
        android:id="@+id/textView_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_student_act"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Situation financière"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <ScrollView
        android:id="@+id/scrvresearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView_3"
        android:layout_centerHorizontal="true"
        android:background="#F0B6B8B6"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Numéro matricule de l'étudiant"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <SearchView
                android:id="@+id/recherchSituationFinance"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:background="#A4C3FBFF"
                android:orientation="horizontal"
                android:queryHint="Saisir numéro..."
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtNomEtudiantSituationFinance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Mr X" />

            <TextView
                android:id="@+id/txtediteurSituationFinance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="Signé par :  Mr Y"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:id="@+id/messageSituationFinance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam rutrum convallis justo, faucibus condimentum massa mollis id. Vestibulum tempor elementum est vel vestibulum. Nulla facilisi. Maecenas eget tristique lorem. Aliquam leo arcu, tempor quis neque vel, rhoncus interdum neque. Aliquam interdum consectetur massa at dignissim. Suspendisse pharetra, erat sed consectetur porta, ante ante auctor dui, id pellentesque tortor odio vel mi. Suspendisse mattis arcu nec sodales vestibulum. Curabitur erat orci, finibus a dictum a, interdum in eros. Duis turpis turpis, maximus quis nisl vitae, vestibulum imperdiet nisi. Vestibulum eu enim eu est rhoncus pulvinar. Nulla vel tortor non diam cursus vulputate. "
                android:textColor="@android:color/black" />


        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/scrvresearch"
        android:layout_gravity="right|center_horizontal|end"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/holo_green_light" />

</RelativeLayout>